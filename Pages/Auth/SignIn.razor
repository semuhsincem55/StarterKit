    private LoginViewModel loginModel = new LoginViewModel();

    private async Task HandleSubmit()
    {

        var response = await httpClient.PostAsJsonAsync("https://api.kolaymatbaam.com/api/Auth/login", loginModel);
        if (response.IsSuccessStatusCode)
        {
            var tokenResponse = await response.Content.ReadFromJsonAsync<LoginResponseViewModel>();

            TokenService.SetToken(tokenResponse.data.token);
 
            await localStorage.SetItemAsync("auth_token", tokenResponse.data.token);

            navigationManager.NavigateTo("/home", true);
        }
        else
        {
            // Hata mesajý gösterme
        }
    }



